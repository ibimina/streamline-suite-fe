{
  "name": "streamline-suite-fe",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "lint:check": "eslint . --ext .ts,.tsx,.js,.jsx",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "playwright test",
    "test:e2e:production": "playwright test --config=playwright.config.production.ts",
    "test:production": "npm run test:ci && npm run test:e2e",
    "test:a11y": "jest --testPathPattern=accessibility",
    "test:smoke": "jest --testPathPattern=smoke",
    "analyze": "cross-env ANALYZE=true next build",
    "lighthouse:ci": "lhci autorun",
    "lighthouse:production": "lhci autorun --config=.lighthouserc.production.json",
    "postbuild": "next-sitemap",
    "clean": "rimraf .next out coverage",
    "prepare": "husky install"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^2.10.1",
    "next": "16.0.1",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "react-redux": "^9.2.0",
    "recharts": "^3.3.0"
  },
  "devDependencies": {
    "@lhci/cli": "^0.12.0",
    "@next/bundle-analyzer": "^16.0.1",
    "@playwright/test": "^1.56.1",
    "@tailwindcss/postcss": "^4",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.14",
    "@types/node": "^24.10.0",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "cross-env": "^7.0.3",
    "eslint": "^9",
    "eslint-config-next": "16.0.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.11",
    "next-sitemap": "^4.2.3",
    "prettier": "^3.4.1",
    "rimraf": "^6.0.1",
    "tailwindcss": "^4",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run type-check && npm run test:ci"
    }
  }
}
